<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/header') %>
</head>

<body>
    <%- include('partials/nav') %>

        <div class="container container-fluid header-container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1>Friends</h1>
                </div>
                <div class="row">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Username</th>
                                <th scope="col"># of trees</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((user) => { %>
                                <tr>
                                    <td>
                                        <%= user.username %>
                                    </td>
                                    <td>
                                        <%= user.numTrees %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include('partials/footer') %>
</body>

</html>